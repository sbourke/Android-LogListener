<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:id="@+id/mainWrapper" android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:padding="5dp" android:orientation="vertical"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true">
		<TextView android:id="@+id/appsome" android:text="@string/appsome"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
		<Button android:id="@+id/start_gen_msg_button"
			android:layout_width="fill_parent" android:text="@string/start_msg_gen"
			android:layout_height="wrap_content" />
		<Button android:id="@+id/stop_gen_msg_button"
			android:layout_width="fill_parent" android:text="@string/stop_msg_gen"
			android:layout_height="wrap_content" />

	</LinearLayout>
	<ScrollView android:id="@+id/consoleWrapper"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:id="@+id/textViewConsole"
			android:layout_height="fill_parent" android:layout_width="fill_parent"
			android:textColor="@color/green" />
	</ScrollView>
</LinearLayout>
